Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
color-primario = #333
color-secundario = #8841da
color-claro = #fff

contenedor()
  display: flex
  width: 96%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color color-claro
  box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.2)

*
  box-sizing: border-box

html
  font-size: 62.5%

body
  margin: 0
  font-family: Fuente1
  font-size: 1.8rem
  color: color-primario

.buscador
  width: 100%
  height: 250px
  padding: 100px
  background-image: url('../images/cover.jpg')
  background-size: cover
  text-align: center
  &__input
    width: 75%
    height: 60px
    padding: 20px
    border: none
    border-radius: 30px
    font-size: 2.5rem

.encabezado--con-filtros
  contenedor()
  h2
    margin-block-start: 10px
    text-transform: uppercase
    font-weight: 500
    font-size: 5rem
    font-family: Fuente2
  .filtros
    width: 250px
    height: 75px
    padding: 20px
    margin-inline-start: auto
    caja-sombra()
    span
      text-transform: uppercase
      font-family Fuente2
    a
      margin-inline-start 20px
      font-size 25px
      color color-primario

.contenido
  margin-block-end 40px
  justify-content space-evenly
  contenedor()

.caja
  max-width 430px
  caja-sombra()
  .caja__contenido
    padding 20px
    background-color color-claro
    span
      text-transform uppercase
      color color-secundario
      font-family Fuente2
    h3
      text-transform uppercase
      font-weight normal
      font-family Fuente2